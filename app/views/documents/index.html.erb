<p id="notice"><%= notice %></p>

<h1>My Documents</h1>

<div class = "media">
  <div class = "media-body">
    <table class = "table table-hover">
      <thead>
        <tr>
<!--           <th>User</th> -->
          <th>Doc type</th>
          <th>Create date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @documents.each do |document| %>
        <tr>
<!--           <td><%= document.user_id %></td> -->
          <td><%= document.doc_type %></td>
          <td><%= document.create_date %></td>
          <td><%= link_to 'Show', document, class: 'btn btn-mini pull-right' %></td>
          <td><%= link_to 'Edit', edit_document_path(document), class: 'btn btn-mini btn-success pull-right' %></td>
          <td><%= link_to 'Destroy', document, method: :delete, class: 'btn btn-mini btn-danger pull-right', data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

