<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Birth Date</th>
      <th>SSN</th>
      <th>Home Phone</th>
      <th>Work Phone</th>
      <th>Cell Phone</th>
      <th>Case Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.birth_date %></td>
        <td><%= profile.ssn %></td>
        <td><%= profile.home_phone %></td>
        <td><%= profile.work_phone %></td>
        <td><%= profile.cell_phone %></td>
        <td><%= profile.case_number %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

